<script>
    document.getElementById("lsend").onclick = function() {
        let usercomment = document.getElementById("msg").value;

        const newdiv = document.createElement("div");
        newdiv.innerHTML = usercomment;
        newdiv.style.marginLeft = "5px";
        document.getElementById("msgleft").append(newdiv);
    }
    document.getElementById("rsend").onclick = function() {
        let usercomment = document.getElementById("msg").value;

        const newdiv = document.createElement("div");
        newdiv.style.textAlign = "right";

        newdiv.innerHTML = usercomment;
        newdiv.style.marginRight = "5px";
        document.getElementById("msgright").append(newdiv);
    }
</script></html>
