<script>
    function cmt(cmtbtnref) {
        let cmt = cmtbtnref.parentElement.parentElement.children[1].children[0];
        if (cmt.value == "") {
            return false;
        }

        const combox = cmtbtnref.parentElement.parentElement.parentElement.parentElement.parentElement.children[2].children[0].children[0].cloneNode(true);

        const cmtbox = cmtbtnref.parentElement.parentElement.parentElement.parentElement.parentElement.children[2].children[0];

        combox.children[0].innerHTML = cmt.value;
        combox.style.display = 'flex';
        cmtbox.append(combox);
        cmtbtnref.parentElement.parentElement.children[1].children[0].value = "";
    }

    function likefunc(btnElement) {

        let postLikeCount = btnElement.children[0].innerHTML;
        let postNumCount = parseInt(postLikeCount);

        postNumCount++;

        btnElement.children[0].innerHTML = postNumCount;
    }

    function del(delref) {
        const delnode = delref.parentElement.parentElement;
        delnode.classList.add("fall");
        delnode.style.transition = "all 5s ease";
        delnode.addEventListener('transitionend',function(){
            delnode.remove();
        })

    }
</script></html>



